.container{
  flex: 1;
  display: flex;
  flex-direction: row;
  height: 20vh;
  width: 100vw;
}
.container1{
  display: flex;
  flex-direction: column;
  margin-top: 9.5vh;
  z-index: 1;
}
.container .picture1{
  width: 50px;
  height: 50px;
  border-radius: 25px;
  margin-right: 7vw;
  margin-left: 5vw;
  margin-top: 10vh;
  z-index: 1;
}
.picture2{
  position: absolute;
  z-index: 0;
  width: 100vw;
  height: 28vh;
}
.button-container {
  display: flex;
  position: absolute;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  height: 5vh;
  width: 100vw;
  z-index: 1;
}
.button-container button {
  flex: 1;
  background-color:#ffffff;
  font-family:  'Source Han Sans ','Microsoft Yahei';
  font-size: medium;
  font-weight: lighter;
}
.header{
  display: flex;
  top: 100%;
  align-items: center;
  flex-direction: column;
  justify-content: center;
  box-sizing: border-box;
  z-index: 1;
  font-weight: 600;
  position: absolute;
  left: 10vw;
  right: 10vw;
  top: 30px;
}
.header1{
  display: -webkit-box;
  overflow: hidden;
  font-weight: 900;
  width: 50%;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}
.tab{
  float: left;
  width: 50%;
  text-align: center;
  padding: 10rpx 0;
  color: gray;
}
.TabSwiper{
  margin-top: 8vh;
  width: 80vw;
  height: 6vh;
  left: 10vw;
  right: 10vw;
  justify-content: space-evenly;
  line-height: 80rpx;
  display: flex;
  flex-direction: row;
  background-color: #ffffff;
 }
.tabBorer{
  border-bottom: 1px solid rgba(14,208,208,1); 
  color: rgba(14,208,208,1);
}
.swiper{
 width: 100%;
 height:66vh;
}
.swiper_con{
 text-align: center;
 width: 100%; 
 height: 100%; 
 padding: 80rpx 0;
}
.picture{
  column-gap: 5rpx;
  column-count: 2;
  padding: 10rpx 10rpx 10rpx 15rpx;
}
.detail1{
  display: flex;
  float: left;
  column-count: 2;
}
.postion{
  width: 50%;
  color: gray;
  font-size: 13px;
  margin-left: 1vw;
  display: -webkit-box;
  overflow: hidden;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}
.num{
  width: 30%;
  margin-left: 20%;
  display: -webkit-box;
  overflow: hidden;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}
.time{
  display: -webkit-box;
  color: gray;
  width: 50%;
  margin-left: 1vw;
  font-size: 13px;
  overflow: hidden;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}
.search-box {
  display: flex;
  align-items: center;
  background-color: #ffffff;
  border:1px solid gray;
  border-radius: 10px;
  margin-top: 2vh;
  padding: 8px;
  margin-left: 7vw;
  margin-right: 7vw;
}
.search-input {
  flex: 1;
  height: 3vh;
  margin-right: 10px;
  margin-left: 20px;
}
.search-btn {
  width: 15vw;
  height: 3vh;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #28db9f;
  color: #ffffff;
  font-size: 15px;
  border: none;
  border-radius: 15px;
}
.picker-box {
  display: flex;
  align-items: center;
  background-color: #f2f2f2;
  border-radius: 20px;
  padding: 8px;
}

.picker-box {
  display: flex;
  flex-direction: row;
  justify-content:space-between;
  align-items: center;
  margin-left: 20px;
  margin-right: 20px;
  background-color: #ffffff;
}
.picker-btn {
  display: flex;
  width: 20vw;
  text-align: left;
  background-color: #ffffff;
  font-size: 12px;
  padding: 10rpx;
  border-radius: 15rpx;
  border: 1px solid gray;
}
.ques-panel{
  font-size:15px;
  line-height:1.5em;
  padding-left: 2vw;
  padding-right:2vw;
  width: 85vw;
  position:relative;
  border-radius: 10px 10px 0px 0px;
}
.ans-panel{
  display: flex;
  font-size: 15px;
  line-height: 1.5em;
  padding-left: 2vw;
  padding-right:2vw;
  border-top:1px dashed rgb(146, 144, 144);
  position:relative;
  width:85vw;
  border-radius: 0px 0px 10px 10px;  
}
.little-picture{
  width: 5vw;
}
.item-box{
  box-shadow: 10rpx 10rpx 10rpx 10rpx #868484;
  border-radius: 10px 10px 10px 10px;
  margin-left:5vw;
  margin-right:5vw;
  margin-top: 1vh;
  margin-bottom: 3vh;
}
